# .env file - Example configuration

# Enable or disable debug mode (true / false)
DEBUG=true

# Vault connection address
VAULT_ADDR=http://127.0.0.1:8200

# Vault access token (keep this secret, do not version it!)
VAULT_TOKEN=hvs.ig8HwfpGZycJFFN1dESLjBPQ

# Mount point of the secrets engine in Vault
MOUNT_POINT=service-identity

# Vault secret paths
SECRET_DB_PATH=db                      # Database credentials
SECRET_AWS_IAM_PATH=aws/ses/iam        # AWS SES IAM credentials
SECRET_AWS_SMTP_PATH=aws/ses/smtp      # AWS SES SMTP credentials
SECRET_REDIS_PATH=redis                # Redis configuration
SECRET_DJANGO_PATH=django              # Django-related secrets

# Name of the RSA key used to sign JWTs (stored in Vault)
SECRET_RSA_KEY_NAME=jwt-rsa-key
